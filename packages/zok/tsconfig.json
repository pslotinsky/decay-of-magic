{
  "compilerOptions": {
    "incremental": true,
    "target": "es2024",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@zok/*": ["src/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
